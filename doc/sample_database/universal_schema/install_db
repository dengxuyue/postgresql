$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/cost_type/cost_type.sql
$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/current_promo/current_promo.sql
$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/district/district.sql
$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/division/division.sql
