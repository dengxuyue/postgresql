#!/bin/bash

PG_SRC=`pwd`

source $PG_SRC/pg_macro

#(1) install
$PGHOME/bin/createdb universal_schema

$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/ddl/createzoneall/createzoneall.sql

