$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/location_type/location_type.sql

$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/party/party.sql

$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/position_grade/position_grade.sql
