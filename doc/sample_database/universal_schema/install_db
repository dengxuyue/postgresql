$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/data/work_shift/work_shift.sql

$PGHOME/bin/psql -d universal_schema -f $PG_SRC/doc/sample_database/universal_schema/ddl/alterzoneall/alterzoneall.sql

echo "The server postgres is running now!"
echo "And already created universal_schema database."
echo "You can operation on universal_schema: psql -d universal_schema" 

